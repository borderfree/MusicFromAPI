<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="5">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center" android:id="@+id/goal_tracker_goal_details_fragment_title_text" android:layout_width="match_parent" android:layout_height="100dp" android:text="@string/goal_tracker_goal_edit_fragment_goal_title" android:layout_weight="1"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/goal_tracker_goal_details_fragment_note_text" android:layout_width="match_parent" android:layout_height="120dp" android:text="@string/goal_tracker_goal_edit_fragment_goal_notes_title" android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/goal_tracker_goal_details_fragment_progress_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/goal_tracker_goal_details_fragment_goal_curret_progress_message" android:layout_weight="0.5"/>
    <SeekBar android:id="@+id/goal_tracker_goal_details_fragment_progress_seek" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="3dp" android:layout_marginRight="20dp" android:layout_marginBottom="3dp" android:layout_weight="0.5"/>
    <Button android:id="@+id/goal_tracker_goal_details_fragment_apply_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/OK" android:maxLines="1"/>
</LinearLayout>
