<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp">
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_goal_title_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/goal_tracker_goal_edit_fragment_goal_title"/>
            <EditText android:layout_gravity="start" android:id="@+id/goal_tracker_edit_fragment_goal_title_value_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:inputType="text"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_due_date_title_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:text="@string/goal_tracker_goal_edit_fragment_due_date_title"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_due_date_text_view" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:text="@string/goal_tracker_goal_edit_fragment_due_date_title" android:layout_weight="1"/>
                <ImageButton android:layout_gravity="right" android:id="@+id/goal_tracker_goal_edit_fragment_due_date_image_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/calendar" android:layout_weight="0" android:contentDescription="@string/info"/>
            </LinearLayout>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_priority_title_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:text="@string/goal_tracker_goal_edit_fragment_priority_title"/>
            <Spinner android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_priority_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_weight="1"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_goal_alert_time_title_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:text="@string/goal_tracker_goal_edit_fragment_goal_alert_time_title"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_alert_time_text_view" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:text="@string/goal_tracker_goal_edit_fragment_goal_alert_time_title" android:layout_weight="1"/>
                <ImageButton android:id="@+id/goal_tracker_goal_edit_fragment_alert_time_image_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/datetime" android:layout_weight="0" android:contentDescription="@string/info"/>
            </LinearLayout>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_goal_repeat_interval_title_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:text="@string/goal_tracker_goal_edit_fragment_goal_repeat_interval_title"/>
            <Spinner android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_repeat_interval_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_weight="1"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_goal_category_title_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:text="@string/goal_tracker_goal_edit_fragment_goal_category_title"/>
            <Spinner android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_category_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_goal_notes_title_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:text="@string/goal_tracker_goal_edit_fragment_goal_notes_title"/>
            <EditText android:layout_gravity="start" android:id="@+id/goal_tracker_goal_edit_fragment_notes_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:ems="10" android:inputType="textMultiLine"/>
        </LinearLayout>
    </ScrollView>
    <Button android:id="@+id/goal_tracker_goal_edit_fragment_save_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="48dp" android:text="@string/save" android:layout_weight="0"/>
</LinearLayout>
