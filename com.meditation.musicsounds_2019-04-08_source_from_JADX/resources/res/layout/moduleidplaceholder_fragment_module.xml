<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp" android:text="@string/moduleidplaceholder_image_label"/>
            <ImageView android:id="@+id/moduleidplaceholder_image" android:layout_width="match_parent" android:layout_height="180dp" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp" android:scaleType="fitCenter" android:contentDescription="@string/moduleidplaceholder_image_description"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp" android:text="@string/moduleidplaceholder_custom_string_label"/>
            <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/moduleidplaceholder_custom_string" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp"/>
            <Button android:layout_gravity="center_horizontal" android:id="@+id/moduleidplaceholder_button" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/moduleidplaceholder_button_open_page"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
