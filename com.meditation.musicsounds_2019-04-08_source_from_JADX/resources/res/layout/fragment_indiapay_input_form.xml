<?xml version="1.0" encoding="utf-8"?>
<android.support.p009v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/india_pay_nested_scroll_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/india_pay_input_form" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Title" android:textSize="24sp" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="72dp" android:text="@string/indiapay_title"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/india_pay_input_linear_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout android:id="@+id/text_input_layout_vpa" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                <EditText android:id="@+id/edit_text_vpa" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_info_vpa" android:maxLines="1" android:ems="10" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:id="@+id/text_input_layout_unq_cust_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                <EditText android:id="@+id/edit_text_unq_cust_id" android:focusable="false" android:focusableInTouchMode="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_unique_customer_id" android:cursorVisible="false" android:ems="10" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:id="@+id/text_input_layout_amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                <EditText android:id="@+id/edit_text_amount" android:focusable="false" android:focusableInTouchMode="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_amount" android:cursorVisible="false" android:ems="10" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:id="@+id/text_input_layout_txndtl" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                <EditText android:id="@+id/edit_text_txn_dtl" android:focusable="false" android:focusableInTouchMode="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_transaction_details" android:cursorVisible="false" android:ems="10" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/delivery_container" android:layout_width="match_parent" android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout android:id="@+id/delivery_address_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                    <EditText android:id="@+id/delivery_address_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_delivery_address" android:maxLines="1" android:ems="10" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout android:id="@+id/delivery_city_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                    <EditText android:id="@+id/delivery_city_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_delivery_city" android:maxLines="1" android:ems="10" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout android:id="@+id/delivery_state_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                    <EditText android:id="@+id/delivery_state_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_delivery_state" android:maxLines="1" android:ems="10" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout android:id="@+id/delivery_pincode_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                    <EditText android:id="@+id/delivery_pincode_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_delivery_pincode" android:maxLines="1" android:ems="10" android:maxLength="6" android:digits="0123456789" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="72dp">
                <android.support.p023v7.widget.AppCompatCheckBox android:id="@+id/india_pay_pay_now_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/indiapay_pay_now"/>
                <android.support.p023v7.widget.AppCompatCheckBox android:id="@+id/india_pay_qr_code_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/indiapay_qr_code"/>
                <android.support.p023v7.widget.AppCompatCheckBox android:id="@+id/india_pay_schedule_later_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/indiapay_schedule_later"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout android:id="@+id/india_pay_select_date_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="72dp">
                <EditText android:textSize="16sp" android:id="@+id/india_pay_select_edit_text" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/indiapay_select_date"/>
            </android.support.design.widget.TextInputLayout>
            <Button android:layout_gravity="center" android:id="@+id/submit_button" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="@string/indiapay_pay"/>
        </LinearLayout>
    </LinearLayout>
</android.support.p009v4.widget.NestedScrollView>
