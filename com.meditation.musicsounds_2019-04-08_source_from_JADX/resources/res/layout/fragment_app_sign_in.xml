<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="22sp" android:textColor="#eee" android:gravity="center" android:id="@+id/note" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/app_sign_in_note" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="230dp" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_below="@+id/note" android:layout_centerHorizontal="true">
            <Button android:id="@+id/sign_in_with_google" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/app_sign_in_with_google"/>
            <Button android:id="@+id/sign_in_with_facebook" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_sign_in_with_facebook"/>
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar android:layout_gravity="center" android:id="@+id/progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</FrameLayout>
