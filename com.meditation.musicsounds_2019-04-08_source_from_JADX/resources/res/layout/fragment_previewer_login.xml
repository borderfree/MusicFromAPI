            <TextView android:textSize="14sp" android:textColor="?android:attr/textColorSecondary" android:layout_gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/abc_control_inset_material" android:layout_marginTop="16dp" android:layout_marginRight="@dimen/abc_control_inset_material" android:layout_marginBottom="5dp" android:text="@string/previewer_login_signinto_label"/>
