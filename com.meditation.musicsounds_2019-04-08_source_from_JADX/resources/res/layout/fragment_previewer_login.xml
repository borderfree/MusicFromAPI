                <TextView android:textSize="14sp" android:textColor="?android:attr/textColorSecondary" android:layout_gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/abc_control_inset_material" android:layout_marginTop="78dp" android:layout_marginRight="@dimen/abc_control_inset_material" android:layout_marginBottom="5dp" android:text="@string/previewer_login_social_label"/>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/abc_control_inset_material" android:layout_marginRight="@dimen/abc_control_inset_material" style="@style/Divider"/>
                <LinearLayout android:gravity="bottom|right|center_vertical|center_horizontal|center|end" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <TextView android:textSize="12sp" android:textColor="?android:attr/textColorPrimary" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/facebook_login_button" android:background="?attr/selectableItemBackgroundBorderless" android:padding="8dp" android:layout_width="80dp" android:layout_height="56dp" android:text="@string/previewer_login_facebook" android:drawableTop="@drawable/ic_facebook_white_24dp" android:textAllCaps="true"/>
                    <TextView android:textSize="12sp" android:textColor="?android:attr/textColorPrimary" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/google_login_button" android:background="?attr/selectableItemBackgroundBorderless" android:padding="8dp" android:layout_width="80dp" android:layout_height="56dp" android:text="@string/previewer_login_google" android:drawableTop="@drawable/ic_google_white_24dp" android:textAllCaps="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
