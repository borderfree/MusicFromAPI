<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:focusableInTouchMode="true" android:descendantFocusability="beforeDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/sc_ad_container" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <com.seattleclouds.widget.MultiSwipeRefreshLayout android:id="@+id/swipe_refresh" android:layout_width="match_parent" android:layout_height="match_parent">
                <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent">
                    <ListView android:scrollbarStyle="outsideOverlay" android:layout_gravity="center" android:id="@android:id/list" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:divider="@null"/>
                    <TextView android:textSize="20sp" android:gravity="center" android:layout_gravity="center" android:id="@android:id/empty" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/messenger_no_messages"/>
                </FrameLayout>
            </com.seattleclouds.widget.MultiSwipeRefreshLayout>
            <ProgressBar android:layout_gravity="center" android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/new_message_container" android:background="#222" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textColor="#eee" android:textColorHint="#777" android:id="@+id/message_input" android:background="@null" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/messenger_new_message_hint" android:layout_weight="1"/>
        <Button android:textSize="30sp" android:textStyle="bold" android:textColor="#eee" android:id="@+id/send_button" android:background="@null" android:layout_width="40dp" android:layout_height="60dp" android:drawableLeft="@drawable/ic_action_send_alpha" android:drawableStart="@drawable/ic_action_send_alpha"/>
    </LinearLayout>
</LinearLayout>
