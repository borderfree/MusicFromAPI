<?xml version="1.0" encoding="utf-8"?>
<android.support.p009v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingBottom="16dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="72dp" android:layout_marginTop="16dp">
            <ImageView android:id="@+id/image_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" app:srcCompat="@drawable/ic_info_new_order"/>
            <TextView android:paddingLeft="4dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:minHeight="72dp" android:text="@string/new_order_billing_address_info"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="72dp" android:layout_marginTop="16dp">
            <ImageView android:id="@+id/image_view_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" app:srcCompat="@drawable/ic_mail_black_new_order"/>
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_email_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/image_view_email" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_email" android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="72dp">
            <ImageView android:id="@+id/image_view_first_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" app:srcCompat="@drawable/ic_perm_identity_black_new_order"/>
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_first_name_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/image_view_first_name" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_first_name" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/new_order_billing_address_first_name" android:layout_centerVertical="true" android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:paddingLeft="40dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="72dp">
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_last_name_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_last_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_last_name" android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="72dp">
            <ImageView android:id="@+id/image_view_street_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" app:srcCompat="@drawable/ic_location_on_new_order"/>
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_street_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/image_view_street_address" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_street" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_street" android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:paddingLeft="40dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="72dp">
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_street2_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_street2" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_street" android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:paddingLeft="40dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="72dp">
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_city_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_cty" android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:paddingLeft="40dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="72dp">
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_state_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_state" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_state" android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:paddingLeft="40dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="72dp">
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_zip_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_zip" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_zip" android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="72dp">
            <android.support.p023v7.widget.AppCompatSpinner android:id="@+id/billing_address_country_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>
            <TextView android:textColor="@color/colorRed" android:id="@+id/billing_address_country_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/new_order_error_text_appearance" android:layout_below="@+id/billing_address_country_spinner" android:layout_alignLeft="@+id/billing_address_country_spinner"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="72dp" android:layout_marginTop="8dp">
            <ImageView android:id="@+id/image_view_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:srcCompat="@drawable/ic_call_new_order"/>
            <android.support.design.widget.TextInputLayout android:id="@+id/billing_address_phone_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/image_view_phone" app:errorEnabled="true" app:hintEnabled="false">
                <EditText android:id="@+id/billing_address_phone_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_order_billing_address_phone_number" android:digits="0123456789+()" android:inputType="phone" android:imeOptions="actionNext"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.p009v4.widget.NestedScrollView>
