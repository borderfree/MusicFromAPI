<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/quiz_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="2">
            <TextView android:gravity="center" android:id="@+id/quiz_play_passed_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quiz_play_passed_label" android:layout_weight="1"/>
            <TextView android:gravity="center" android:id="@+id/quiz_play_current_points_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quiz_play_current_points_label" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <TextView android:textColor="#00b82e" android:gravity="center" android:layout_gravity="center" android:id="@+id/quiz_play_question_passed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quiz_play_default_score" android:layout_weight="1"/>
            <TextView android:textColor="#f5003d" android:gravity="center" android:layout_gravity="center" android:id="@+id/quiz_play_question_points" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quiz_play_default_score" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/quiz_play_question_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="12">
            <ImageView android:id="@+id/quiz_play_question_image" android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="4"/>
            <ScrollView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="8">
                <TextView android:id="@+id/quiz_play_question_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/quiz_play_question_description_default" android:layout_weight="8"/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@+id/quiz_play_bottom_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="15dp" android:layout_weight="1" layout="@layout/quiz_play_dynamic_view"/>
</LinearLayout>
