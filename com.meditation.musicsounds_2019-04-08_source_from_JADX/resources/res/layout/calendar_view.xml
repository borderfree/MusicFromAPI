<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:id="@+id/navigation" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="22sp" android:textStyle="bold" android:id="@+id/previous" android:layout_width="50dp" android:layout_height="50dp" android:text=" &lt; "/>
        <Button android:textSize="15sp" android:textStyle="bold" android:gravity="center" android:id="@+id/up" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1"/>
        <Button android:textSize="22sp" android:textStyle="bold" android:id="@+id/next" android:layout_width="50dp" android:layout_height="50dp" android:text=" &gt; "/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/events" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:id="@android:id/list" android:layout_width="match_parent" android:layout_height="0dp" android:drawSelectorOnTop="false" android:layout_weight="1"/>
        <TextView android:textSize="20sp" android:gravity="center" android:id="@android:id/empty" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/calendar_no_events"/>
    </LinearLayout>
    <include android:id="@+id/days" layout="@layout/calendar_view_days_table"/>
    <TableLayout android:id="@+id/months" android:visibility="gone" android:layout_width="match_parent" android:layout_height="200dp" android:stretchColumns="*">
        <TableRow android:layout_weight="1">
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
            <TextView style="@style/calendar_month_text"/>
        </TableRow>
    </TableLayout>
    <TableLayout android:id="@+id/years" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="*">
        <TableRow>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
        </TableRow>
        <TableRow>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
        </TableRow>
        <TableRow>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
            <TextView style="@style/calendar_year_text"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
