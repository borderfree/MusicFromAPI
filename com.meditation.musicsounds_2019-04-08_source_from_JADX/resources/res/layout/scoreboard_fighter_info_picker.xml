<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/LinearLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/scoreboard_f1_name_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/scoreboard_fighter_name_1"/>
    <EditText android:id="@+id/scoreboard_f1_name_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/scoreboard_fighter_name_1" android:ems="10" android:inputType="text"/>
    <TextView android:id="@+id/scoreboard_f2_name_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/scoreboard_fighter_name_2"/>
    <EditText android:id="@+id/scoreboard_f2_name_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/scoreboard_fighter_name_2" android:ems="10" android:inputType="text"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <CheckBox android:layout_gravity="center" android:id="@+id/scoreboard_clear_scores_chkbox" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/scoreboard_clear_scores_chkbox_title" android:layout_weight="2"/>
        <TextView android:textSize="18sp" android:layout_gravity="center" android:id="@+id/scoreboard_rounds_count_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/scoreboard_num_of_rounds" android:layout_weight="2.3"/>
        <Spinner android:layout_gravity="center" android:id="@+id/scoreboard_round_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
