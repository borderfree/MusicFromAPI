<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:id="@+id/authenticate_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" style="?android:attr/progressBarStyleLarge"/>
    <ScrollView android:id="@+id/authenticate_form_scroller" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/authenticate_form" android:paddingLeft="@dimen/app_auth_layout_horizontal_margin" android:paddingTop="@dimen/app_auth_layout_vertical_margin" android:paddingRight="@dimen/app_auth_layout_horizontal_margin" android:paddingBottom="@dimen/app_auth_layout_vertical_margin" style="@style/AppAuthFormLayout">
            <TextView android:id="@+id/sign_in_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/control_inset" android:layout_marginRight="@dimen/control_inset" android:layout_marginBottom="@dimen/activity_vertical_margin" android:text="@string/app_auth_appeal_sign_in"/>
            <EditText android:id="@+id/email" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/app_auth_prompt_email" android:maxLines="1" android:maxLength="255" android:inputType="textEmailAddress" android:fontFamily="sans-serif"/>
            <EditText android:id="@+id/password" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/app_auth_prompt_password" android:maxLines="1" android:maxLength="100" android:inputType="textPassword" android:imeOptions="actionGo" android:fontFamily="sans-serif"/>
            <Button android:textStyle="bold" android:id="@+id/sign_in_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_vertical_margin" android:text="@string/app_auth_action_sign_in" style="?android:attr/textAppearanceSmall"/>
            <Button android:textStyle="bold" android:textColor="@color/auth_forgot_password_text_color" android:id="@+id/forgotPassword" android:background="@null" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_vertical_margin" android:text="@string/app_auth_action_forgot_password" android:textAllCaps="false" style="?android:attr/textAppearanceSmall"/>
            <Button android:id="@+id/show_register_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/control_inset" android:layout_marginTop="@dimen/activity_double_vertical_margin" android:layout_marginRight="@dimen/control_inset" android:text="@string/app_auth_action_register_a" android:textAllCaps="false" style="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
