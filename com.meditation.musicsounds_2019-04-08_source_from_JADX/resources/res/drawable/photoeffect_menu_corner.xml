<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#a4a4a4"/>
            <corners android:radius="7dp"/>
        </shape>
    </item>
    <item android:bottom="3px">
        <shape android:shape="rectangle">
            <stroke android:width="2dp"/>
            <solid android:color="#7dd0d0d0"/>
            <corners android:radius="7dp"/>
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp"/>
        </shape>
    </item>
</layer-list>
